<?xml version="1.0" encoding="utf-8"?>

	<selector xmlns:android="http://schemas.android.com/apk/res/android">

		<item android:state_pressed="true" > <!-- pressed -->
			<shape android:shape="rectangle">
			    <solid android:color="@color/button_pressed"/>
			    <corners android:radius="3dp" />
			</shape>
		</item>
	    <item android:state_focused="true" > <!-- focused -->
			<shape android:shape="rectangle">
			    <solid android:color="@color/button_focused"/>
				<corners android:radius="3dp" />
			</shape>
		</item>
		<item > <!-- default -->
			<shape android:shape="rectangle">
			    <gradient
			        android:angle="-90"
					android:startColor="@color/button_normal_bright"
					android:endColor="@color/button_normal_dark"/>
				<corners android:radius="3dp" />
				<stroke android:width="2dp"
				    	android:color="@color/button_edge"/>
			</shape>
		</item>
	</selector>
